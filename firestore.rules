rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      match /tasks/{taskId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /sessions/{sessionId} {
        allow read, write: if request.auth.uid == userId;
      }

      match /stats/{dateId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /quotes/{quoteId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
